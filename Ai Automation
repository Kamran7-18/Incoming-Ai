  <!-- three.js background -->
  <script src="https://unpkg.com/three@0.158.0/build/three.min.js"></script>
  <script>
  const canvas=document.getElementById('bg');
  const renderer=new THREE.WebGLRenderer({canvas,antialias:true,alpha:true});
  renderer.setPixelRatio(Math.min(window.devicePixelRatio,2));
  renderer.setSize(window.innerWidth,window.innerHeight);
  const scene=new THREE.Scene();
  const camera=new THREE.PerspectiveCamera(50,window.innerWidth/window.innerHeight,0.1,1000);
  camera.position.z=40;
  const group=new THREE.Group();scene.add(group);
  const pts=[];const N=60;
  for(let i=0;i<N;i++){const x=(Math.random()-0.5)*80,y=(Math.random()-0.5)*60,z=(Math.random()-0.5)*30;
    const geom=new THREE.SphereGeometry(0.25,8,8);
    const mat=new THREE.MeshBasicMaterial({color:0x6AE3FF,opacity:0.9,transparent:true});
    const m=new THREE.Mesh(geom,mat);m.position.set(x,y,z);group.add(m);pts.push(m);}
  function animate(){requestAnimationFrame(animate);const t=Date.now()*0.0006;pts.forEach((p,i)=>{p.position.x+=Math.sin(t+i)*0.02;p.position.y+=Math.cos(t*0.9+i*1.1)*0.02;});
    group.rotation.y+=0.0007;renderer.render(scene,camera);}animate();
  window.addEventListener('resize',()=>{renderer.setSize(window.innerWidth,window.innerHeight);camera.aspect=window.innerWidth/window.innerHeight;camera.updateProjectionMatrix();});
  function joinWaitlist(){const email=document.getElementById('email').value.trim();if(!email)return;
    const el=document.getElementById('waitcount');el.textContent=String(Number(el.textContent||0)+1);
    alert('Thanks — you’re on the waitlist.');document.getElementById('email').value='';}
  </script>
